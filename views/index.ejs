<%- include('partials/head.ejs') %>
<%- include('partials/navbar.ejs') %>

<!-- Main Content -->
<main id="main-tabela" class="container text-center text-white py-5 ">
    <h1 class="display-4 fw-bold py-5">Revise as Categorias</h1>

    <!-- Formulário de Categoria -->
    <section class="d-flex justify-content-center mt-5">
        <div class="table-responsive" style="max-width: 100%; margin: auto;"> <!-- Centralização e ajuste da largura -->
            <table class="table table-striped table-hover text-center" style="font-size: 1.1rem;"> <!-- Fonte maior -->
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Título</th>
                        <th scope="col">Slug</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Exemplo de Categoria -->
                    <tr>
                        <td>1</td>
                        <td>Política</td>
                        <td>politica</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-info btn-sm" title="Visualizar">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-warning btn-sm" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-danger btn-sm" title="Excluir">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <!-- Fim do Exemplo -->
                </tbody>
            </table>
        </div>
    </section>

    <!-- Mensagem de Sucesso -->
    <div id="successMessage" class="alert alert-success mt-4 text-center d-none" role="alert">
        <i class="bi bi-check-circle"></i> Categoria cadastrada com sucesso!
    </div>
</main>

